<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_top_stroke"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp" >

        <EditText
            android:id="@+id/top_et_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_input_search"
            android:hint="@string/find_et_hint"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/top_ib_search"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="#00000000"
            android:contentDescription="@string/search"
            android:scaleType="centerInside"
            android:src="@drawable/top_search_icon" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/category_listView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:footerDividersEnabled="false"
            android:scrollbars="none" />

        <GridView
            android:id="@+id/category_gridView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/white"
            android:horizontalSpacing="9dp"
            android:numColumns="3"
            android:paddingEnd="9dp"
            android:paddingStart="9dp"
            android:paddingTop="9dp"
            android:verticalSpacing="9dp" />
    </LinearLayout>

</LinearLayout>