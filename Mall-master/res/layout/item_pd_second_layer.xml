<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="10" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_pd_second_layer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:scaleType="fitXY"
        android:src="@drawable/default_image_loading" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_weight="5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_item_pd_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple MacBook Air MJVE2CH/A 13.3 英寸宽屏笔记本电脑" />

        <TextView
            android:id="@+id/tv_item_pd_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="￥:8888.00"
            android:textColor="@color/red" />
    </LinearLayout>

</LinearLayout>